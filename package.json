{
  "name": "claude-dev-recorder",
  "version": "1.0.1",
  "description": "Automatically record and leverage Claude Code implementation history",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-dev-recorder": "dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "files": [
    "dist/",
    "templates/",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tora29/claude-dev-recorder.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "documentation",
    "ai",
    "mcp",
    "implementation-history",
    "code-documentation",
    "vector-search"
  ],
  "author": "Tora29",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tora29/claude-dev-recorder/issues"
  },
  "homepage": "https://github.com/Tora29/claude-dev-recorder#readme",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "gray-matter": "^4.0.3",
    "uuid": "^13.0.0",
    "vectra": "^0.11.1",
    "zod": "^3.25.76"
  }
}
